@{
  Layout = "_Layout";
}

@model Podcast.Models.Category

<h3>Add a Category</h3>
<hr>

@using (Html.BeginForm())
{
  <div class="form-group">
  <h5>@Html.LabelFor(model => model.Name)</h5>
  @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @required = "required" })
  </div>
  <input type="submit" value="Add New Category" class="btn btn-light"/>
}

<br>
<p class="btn btn-light">@Html.ActionLink("Show all Categories", "Index", null, null, new {@style = "color:#e6c8a0"})</p>