@{
  Layout = "_Layout";
}

@model Podcast.Models.Category

<h3>Add A Category</h3>
<hr>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @required = "required" })
  <input type="submit" value="Add New Category" class="btn btn-dark"/>
}

<p class="btn btn-dark">@Html.ActionLink("Show all Categories", "Index")</p>