@{
  Layout = "_Layout";
}

@model Podcast.Models.Category

<h3>Edit this Category: @Html.DisplayFor(model => model.Name)</h3>
<hr>

@using (Html.BeginForm())
{
  <div class="form-group">
  @Html.HiddenFor(model => model.CategoryId)

  <p>Category @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name,  new { htmlAttributes =  new { @class = "form-control" } })</p>
  </div>

  <input type="submit" value="Save" class="btn btn-light"/>
}
<br>
<p class="btn btn-light">@Html.ActionLink("Back to List", "Index", null, null, new { @style = "color:#e6c8a0"})</p>