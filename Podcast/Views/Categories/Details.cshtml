@{
  Layout = "_Layout";
}

@model Podcast.Models.Category

<h3>Category Details</h3>
<hr />
<h4>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h4>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This category does not contain any titles</p>
}
else
{
  <h4>Titles in this Category are:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <h5>@join.Title.PodcastName</h5>
  }
  </ul>
}

<p class="btn btn-light">@Html.ActionLink("Back to Categories", "Index", null, null, new { @style = "color:#e6c8a0"})</p>
<p class="btn btn-light">@Html.ActionLink("Edit Category", "Edit", new { id = Model.CategoryId }, new { @style = "color:#e6c8a0"})</p>
<p class="btn btn-light">@Html.ActionLink("Delete Category", "Delete", new { id = Model.CategoryId }, new { @style = "color:#e6c8a0"})</p>
<p class="btn btn-light">@Html.ActionLink("Back to Podcasts", "Index", "Titles", null, new {@style = "color:#e6c8a0"})</p>
