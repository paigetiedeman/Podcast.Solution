@{
  Layout = "_Layout";
}

@using Podcast.Models;

<h2>Categories</h2>
<hr>

@if (@Model.Count == 0)
{
  <h3>No categories have been added yet!</h3>
} 


  @foreach(Category category in Model)
  {
    <div class="card-deck">
        <div class="card text-center bg-light border-dark mb-3" style="width: 24rem;">
          <div class ="card-body">
            <h5 class="card-title">@Html.ActionLink($"{category.Name}", "Details", new { id = category.CategoryId}, new { @class = "text" })</h5>
          </div>
        </div>
    </div>
  }

<br>
<p class="btn btn-dark">@Html.ActionLink("Add New Category", "Create")</p>
<p class="btn btn-dark">@Html.ActionLink("Return Home", "Index", "Home")</p>