@{
  Layout = "_Layout";
}

@using Podcast.Models;

<h1>Categories</h1>
<hr>

@if (@Model.Count == 0)
{
  <h3>No courses have been added yet!</h3>
} 

<ul>
  @foreach(Category category in Model)
  {
    <li>@Html.ActionLink($"{category.Name}", "Details", new { id = category.CategoryId })</li>
  }
</ul>

<p class="btn btn-dark">@Html.ActionLink("Add New Category", "Create")</p>
<p class="btn btn-dark">@Html.ActionLink("Return Home", "Index", "Home")</p>