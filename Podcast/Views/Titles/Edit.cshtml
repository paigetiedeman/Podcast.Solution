@{
  Layout = "_Layout";
}

@model Podcast.Models.Title

<h3>Edit this Podcast: @Html.DisplayFor(model => model.PodcastName)</h3>
<hr>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TitleId)
  <div class="form-group">
    <h4>Podcast Name:</h4>
    @Html.EditorFor(model => model.PodcastName,  new { htmlAttributes = new { @class = "form-control", @required = "required" } })
  </div>
  <div class="form-group">
    <h4>@Html.Label("Select Category")</h4>
    @Html.DropDownList("CategoryId", null, new { @class = "form-control" })

    <br>
    <input type="submit" value="Save" class="btn btn-light"/>
  </div>
}

<p class="btn btn-light">@Html.ActionLink("Back to List", "Index", null, null, new {@style = "color:#e6c8a0"})</p>