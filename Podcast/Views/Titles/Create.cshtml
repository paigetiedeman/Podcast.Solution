@{
  Layout = "_Layout";
}

@model Podcast.Models.Title

<h3>Add a Podcast and Category</h3>
<hr>

@using (Html.BeginForm())
{
  <div class = "form-group">
    <h5>Podcast Title</h5>
    @Html.TextBoxFor(model => model.PodcastName, new {@class = "form-control", @required= "required"})
    <br>
    <h5>@Html.LabelFor(model => model.Description)</h5>
    @Html.TextBoxFor(model => model.Description, new {@class = "form-control", @required= "required"})
    <br>
    <h5>@Html.Label("Select Category")</h5>
    @Html.DropDownList("CategoryId", null, new { @class = "form-control" })
  </div>
  <br>
  <input type="submit" value="Add New Podcast" class="btn btn-light"/>

}

<br>
<p class="btn btn-light">@Html.ActionLink("Show All Podcasts", "Index", null, null, new {@style = "color:#e6c8a0"})</p>