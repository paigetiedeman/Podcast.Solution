@{
  Layout = "_Layout";
}

@using Podcast.Models;
@model List<Podcast.Models.Title>;

<h2>Podcasts:</h2>
<hr>

@if (@Model.Count == 0)
{
  <h4>No podcast by that name has been found!</h4>
} 

@foreach (Title title in Model)
{
  <div class="card-deck">
    <div class="card text-center mb-3" style="width: 24rem;">
      <div class ="card-body">
        <h5 class="card-title">@Html.ActionLink($"{title.PodcastName}", "Details", new { id = title.TitleId }, new { @class = "text" })</h5>
        <p class ="card-text">@title.Description</p>
          <div class="card-footer text-muted">
            Your Rating: @title.Rating
          </div>
      </div>
    </div>
  </div>
}

<br>
<p class ="btn btn-light">@Html.ActionLink("Search for a Podcast", "Search", null, null, new {@style = "color:#e6c8a0"})</p>
<p class="btn btn-light">@Html.ActionLink("Add New Podcast", "Create", null, null, new {@style = "color:#e6c8a0"})</p>
<p class="btn btn-light">@Html.ActionLink("Add A Category", "AddCategory", null, null, new {@style = "color:#e6c8a0"})</p>
<p class="btn btn-light">@Html.ActionLink("Return Home", "Index", "Home", null, new {@style = "color:#e6c8a0"})</p>
